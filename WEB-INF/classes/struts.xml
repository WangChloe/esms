<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Constants -->
    <constant name="struts.devMode" value="false"/>
    <constant name="struts.action.extension" value="do"/>
    <constant name="struts.objectFactory" value="spring"/>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>

    <!-- Actions in this package will be prefixed with /user/ -->
    <package name="user" extends="struts-default" namespace="/user">
        <action name="*" class="userAction" method="{1}">
        </action>
    </package>
    
    <!-- Actions in this package will be prefixed with /role/ -->
    <package name="role" extends="struts-default" namespace="/role">
        <action name="*" class="roleAction" method="{1}">
        </action>
    </package>
    
    <!-- Actions in this package will be prefixed with /orderBase/ -->
    <package name="orderBase" extends="struts-default" namespace="/orderBase">
        <action name="*" class="orderBaseAction" method="{1}">
        </action>
    </package>
    
    <!-- Actions in this package will be prefixed with /orderProcess/ -->
    <package name="orderProcess" extends="struts-default" namespace="/orderProcess">
        <action name="*" class="orderProcessAction" method="{1}">
        </action>
    </package>
    
    <!-- Actions in this package will be prefixed with /orderEvaluate/ -->
    <package name="orderEvaluate" extends="struts-default" namespace="/orderEvaluate">
        <action name="*" class="orderEvaluateAction" method="{1}">
        </action>
    </package>
    
    
    
</struts>
